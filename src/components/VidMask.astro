<div class="mask-wrapper">
	<video 
		src="https://frentelocal.com/wp-content/uploads/2024/03/bokeh_-_3787-540p.mp4"
		class="clipped-video" 
		muted loop autoplay
	></video>
	<svg height="100%" width="100%">
		<clipPath id="text-overlay" x="0" y="0" height="100%" width="100%">
			<text 
				class="svg-text"
				x="50%" 
				y="50%" 
				fill="steelblue"
				aligment-baseline="middle"
				text-anchor="middle"
			>red arteria</text>
		</clipPath>
	</svg>
</div>

<style>
	.mask-wrapper {
		position: relative;
		height: 10vh;
		width: 100%;
		margin: 0 auto;
/*		border: 1px solid gray;*/
/*		border-radius: 2px;*/
	}
	svg {
		position: absolute;
		top: 0;
		left: 0;
		height: 100%;
/*		border: 1px solid steelblue;*/
	}
	video {
		width: 100%;
		height: 100%;
	}
	.clipped-video {
		-webkit-clip-path: url(#text-overlay);
		clip-path: url(#text-overlay);
	}
	.svg-text {
		font-family: CocoBiker;
		font-size: 2rem;
		letter-spacing: .5rem;
		text-align: center;
		transition: 1s font-size;
	}
	@media screen and (min-width: 700px) {
		.mask-wrapper {
			height: 30vh;
		}
		.svg-text {
			font-size: 5rem;
			letter-spacing: 1rem;
		}
	}
	@media screen and (min-width: 1260px) {
		.mask-wrapper {
			height: 50vh;
		}
		.svg-text {
			font-size: 7rem;
			letter-spacing: 2rem;
		}
	}
	@media screen and (min-width: 1660px) {
		.mask-wrapper {
			height: 70vh;
		}
		.svg-text {
			font-size: 10rem;
			letter-spacing: 2rem;
		}
	}
</style>